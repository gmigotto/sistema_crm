@model PropostaModel
@{
    Layout = "../Shared/_Layout.cshtml";
}

<h2> Relatórios por Período</h2>

<form asp-controller="Proposta" asp-action="Vendas">
    <div class="form-group">
        <label>Período</label>
        <input asp-for="DataDe" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="DataAte" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-block btn-success">Pesquisar</button>
</form>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nº Proposta</th>
            <th>Data</th>
            <th>Vendedor</th>
            <th>Cliente</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>

        @{
           
           
                foreach (var item in (List<PropostaModel>)ViewBag.ListaProposta)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Data</td>
                        <td>@item.Vendedor_id</td>
                        <td>@item.Cliente_id</td>
                        <td>R$ </td>
                    </tr>
                }
            
        }
    </tbody>
</table>
