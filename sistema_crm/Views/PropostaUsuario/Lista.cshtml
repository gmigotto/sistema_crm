<body class="g-sidenav-show  bg-gray-100">



    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">





        <header>
            <nav class=" navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl">
                <div class="container-fluid py-1 px-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                        </ol>
                        <h6 class="font-weight-bolder mb-0">Negócios</h6>
                    </nav>

                    <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                        <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                        </div>

                    </div>

                </div>
            </nav>
        </header>


        <div class="container-fluid py-5">

            <div class=" d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="@Url.Action("DownloadPropostasCsv", "PropostaUsuario")" class="btn btn-primary">Download CSV</a>

                <a class="btn btn-success" role="button" asp-controller="PropostaUsuario" asp-action="Criar" onclick="Inserir()">Novo cadastro</a>

            </div>

            <script>
                function Inserir() {
                    window.location.href = "../PropostaUsuario/Criar";
                }
            </script>



            <div class="row">
                <div class="col-12">



                    <div class="card mb-4">

                        <div class="card-header pb-0">
                            <h6>Propostas Cadastradas</h6>
                        </div>

                        <div class="card-body px-0 pt-0 pb-2">
                            <div class="table-responsive p-0">

                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class=" text-center text-uppercase text-secondary text-xxs font-weight-bolder border-0 opacity-7 ps-2" scope="col">Nº Proposta</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder border-0 opacity-7 ps-2" scope="col">Cliente</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder border-0 opacity-7 ps-2" scope="col">Vendedor</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder border-0 opacity-7 ps-2" scope="col">Status</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder border-0 opacity-7 ps-2" scope="col">Valor</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder border-0 opacity-7 ps-2" scope="col"> </th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @{
                                            //foreach possibilita executar um conjunto de comandos para cada elemento presente na lista
                                            //List -> coloca no formato de lista

                                            
                                                foreach (var item in (List<PropostaUsuarioModel>)ViewBag.ListaProposta){
                                                <tr>
                                                    <td scope="row">
                                                    <h6 class="text-center mb-0 text-sm ">@item.Id</h6>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex flex-column justify-content-center">
                                                            <h6 class="mb-0 text-sm"> @item.Cliente_id </h6>
                                                        </div>

                                                    </td>
                                                    <td>
                                                        <div class="d-flex flex-column justify-content-center">
                                                            <p class="mb-0 text-sm"> @item.Vendedor_id </p>
                                                        </div>
                                                    </td>
                                                    <td>
                                                       

                                                        @{

                                                            string corTexto = item.Status == "EM NEGOCIAÇÃO" ? "badge badge-sm bg-gradient-primary" : "text-center";
                                                            string corTexto2 = item.Status == "PERDIDO" ? "badge badge-sm bg-gradient-danger" : "text-center";
                                                            string corTexto3 = item.Status == "VENDA REALIZADA" ? "badge badge-sm bg-gradient-success" : "text-center";
                                                            string corTexto4 = item.Status == "CANCELADO" ? "badge badge-sm bg-gradient-secondary" : "text-center";

                                                        }
                                                        <p class=" @corTexto @corTexto2 @corTexto3 @corTexto4"> @item.Status</p>
                                                    </td>
                                                   
                                                    <td>
                                                        <div class="d-flex flex-column justify-content-center">
                                                            <h6 class="mb-0 text-sm">@item.ValorTotal.ToString("C")</h6>
                                                        </div>
                                                    
                                                    </td>
                                                    <td>
                                                        <div class="btn-group" role="group" aria-label="Basic example">
                                                            <button type="button" class="btn btn-primary" onclick="Editar(@item.Id)">Detalhes</button>


                                                        </div>
                                                    </td>

                                                </tr>

                                            }
                                           
                                           
                                            
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
