                        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                        DisplayLinkToNextPage = PagedListDisplayMode.Always,
                        Display = PagedListDisplayMode.Always
                    }
                             ) *@
                </div>
            </div>
        </div>

        <br />


        <script>

            function Editar(id) {
                window.location.href = "../../PropostaUsuario/Editar/" + id;
            }

            function Excluir(id) {
                window.location.href = "../PropostaUsuario/Excluir/" + id;
            }
        </script>


        </div>
