            <input type="text" id="expiry_year" name="card_info[expiry_year]" required><br><br>

            <label for="cvv">CVV:</label>
            <input type="text" id="cvv" name="card_info[cvv]" required><br><br>

            <h2>Informações do Titular</h2>
            <label for="holder_name">Nome do Titular:</label>
            <input type="text" id="holder_name" name="card_holder_info[name]" required><br><br>

            <label for="cpf">CPF/CNPJ:</label>
            <input type="text" id="cpf" name="card_holder_info[cpf]" required><br><br>

            <label for="email">E-mail:</label>
            <input type="email" id="email" name="card_holder_info[email]" required><br><br>

            <label for="cep">CEP:</label>
            <input type="text" id="cep" name="card_holder_info[cep]" required><br><br>

            <label for="address_number">Número do Endereço:</label>
            <input type="text" id="address_number" name="card_holder_info[number]" required><br><br>

            <label for="phone">Telefone:</label>
            <input type="text" id="phone" name="card_holder_info[phone]" required><br><br>

            <h2>Informações do Pedido</h2>
            <label for="customer">Cliente:</label>
            <input type="text" id="customer" name="customer" required><br><br>

            <label for="total_value">Valor Total:</label>
            <input type="number" id="total_value" name="total_value" required><br><br>

            <label for="payment_method">Método de Pagamento:</label>
            <select id="payment_method" name="payment_method" required>
                <option value="card">Cartão de Crédito</option>
            </select><br><br>

            <button type="submit">Realizar Pagamento</button>
        </form>

   

