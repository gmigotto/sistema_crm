       <script>
            $(document).ready(function () {
                // Faz uma requisição AJAX para obter o valor total de vendas
                $.ajax({
                    url: '@Url.Action("ObterProgressoVendas", "Vendedor")',
                    type: 'GET',
                    success: function (data) {
                        if (data && data.totalVendas !== undefined) {
                            // Formata o valor em reais
                            let totalVendasFormatado = parseFloat(data.totalVendas).toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });

                            // Atualiza o elemento com o valor formatado
                            $('#totalVendas').text(totalVendasFormatado);
                        } else {
                            alert("Resposta inválida do servidor.");
                        }
                    },
                    },
                    error: function () {
                        alert("Erro ao carregar o valor total de vendas.");
                    }
                });
            });
       </script>
        
        <script>
            $(document).ready(function () {
                // Função para buscar o progresso das vendas do mês
                function atualizarProgressoVendasDoMes() {
                    $.ajax({
                        url: '/Vendedor/ObterProgressoVendas',
                        type: 'GET',
                        success: function (data) {
                            // Atualiza o valor total das vendas e da meta no frontend
                            $('.meta-valor').text('R$ ' + data.meta.toFixed(2));
                            $('.vendas-valor').text('R$ ' + data.totalVendas.toFixed(2));

                            // Calcula o progresso em porcentagem e atualiza a barra de progresso
                            var progressoPercent = Math.round(data.progresso) + '%';
                            $('.barra-preenchida').css('width', progressoPercent).text(progressoPercent);
                        }
                    });
                }

                // Chama a função de atualização ao carregar a página
                atualizarProgressoVendasDoMes();
            });
