        <div class="card" style="margin-bottom: 60px">
            <div class="card-header"> <h4 class="text-muted">Cadastro de Cliente</h4></div>
            <div class="card-body">



    <form asp-controller="ClienteUsuario" asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id" value="@try {@ViewBag.Cliente.Id} catch { }" />
    <input type="hidden" asp-for="VendedorId" value="@try { @ViewBag.Cliente.VendedorId} catch { }" />


    <div class="form-group">
        <label for="nome">Razão Social</label>
        <input asp-for="Nome" type="text" class="form-control" value="@try {@ViewBag.Cliente.Nome} catch { }" />
        <span asp-validation-for="Nome"></span>

    </div>
    <div class="form-group">
        <label for="cnpj">CNPJ</label>
        <input asp-for="CNPJ" type="text" class="form-control" id="cnpj" value="@try {@ViewBag.Cliente.CNPJ} catch {} ">
        <span asp-validation-for="CNPJ"></span>


    </div>

    <div class="form-group">
        <label for="email">Endereço</label>
        <input asp-for="End" type="text" class="form-control" value="@try {@ViewBag.Cliente.End} catch {}">
        <span asp-validation-for="End"></span>
    </div>

    <div class="form-group">
        <label for="uf">UF</label>
        <input asp-for="UF" type="text" class="form-control" value="@try {@ViewBag.Cliente.UF} catch {}">
        <span asp-validation-for="UF"></span>
    </div>

    <div class="form-group">
        <label for="telefone"> Telefone</label>
        <input asp-for="Telefone" type="text" class="form-control" id="telefone" value="@try{ @ViewBag.Cliente.Telefone} catch {}"> <br />
        <span asp-validation-for="Telefone"></span>
    </div>
                    <div class="row">
                        <div class="form-group col-md-5 mb-3">
                            <label for="senha">Situação</label>

                            <select asp-for="Situacao" type="text" class="form-control" value="@try {
                                @ViewBag.Cliente.Situacao
} catch {} ">

                                <option value="">Escolha...</option>
                                <option>ATIVO</option>
                                <option>INATIVO</option>
                                <option>LEAD</option>
                            </select>
                        </div>
                    </div>

    <button type="submit" class="btn btn-success" asp-controller="ClienteUsuario" asp-action="Editar">Alterar</button>

    <button type="button" class="btn btn-secondary" onclick="Voltar()">Voltar</button>
    <script>
        function Voltar() {
            window.location.href = '../../Cliente/Lista';
        }
    </script>




</form>

